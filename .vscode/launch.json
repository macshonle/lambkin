{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extension/dist/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/packages/server/dist/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Extension + Server",
      "configurations": ["Launch Extension", "Attach to Server"]
    }
  ]
}
