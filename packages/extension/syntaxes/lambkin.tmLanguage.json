{
  "name": "Lambda Calculus",
  "scopeName": "source.lambkin",
  "patterns": [
    { "include": "#comment" },
    { "include": "#let-declaration" },
    { "include": "#lambda" },
    { "include": "#identifier" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "match": "--.*$",
      "name": "comment.line.double-dash.lambkin"
    },
    "let-declaration": {
      "match": "\\b(let)\\s+([a-zA-Z0-9_+*][a-zA-Z0-9_+*\\-']*)\\s*(:=)",
      "captures": {
        "1": { "name": "keyword.control.let.lambkin" },
        "2": { "name": "entity.name.function.lambkin" },
        "3": { "name": "keyword.operator.assignment.lambkin" }
      }
    },
    "lambda": {
      "match": "(\\\\|Î»)\\s*([a-zA-Z0-9_+*][a-zA-Z0-9_+*\\-']*)\\s*(\\.)",
      "captures": {
        "1": { "name": "keyword.operator.lambda.lambkin" },
        "2": { "name": "variable.parameter.lambkin" },
        "3": { "name": "punctuation.separator.lambkin" }
      }
    },
    "identifier": {
      "match": "\\b[a-zA-Z0-9_+*][a-zA-Z0-9_+*\\-']*\\b",
      "name": "variable.other.lambkin"
    },
    "punctuation": {
      "patterns": [
        {
          "match": "\\(",
          "name": "punctuation.paren.open.lambkin"
        },
        {
          "match": "\\)",
          "name": "punctuation.paren.close.lambkin"
        }
      ]
    }
  }
}
